<?xml version="1.0" encoding="UTF-8" ?>
<hibernate-configuration xmlns="http://www.hibernate.org/xsd/orm/cfg">
    <session-factory>
        <property name="connection.driver.class">com.mysql.cj.jdbc.Driver</property>

<!--        <property name="connection_url">jdbc:mysql://localhost:3308/java_advance_db</property>-->
<!--        <property name="connection_username">root</property>-->
<!--        <property name="connection_password">123abc</property>-->

        <property name="connection.url">jdbc:mysql://localhost:3308/java_advance_db</property>
